<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MandiAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white_primary</item>
        <item name="colorSurface">@color/white</item>
        <item name="backgroundColor">@color/white_primary</item>
        <item name="iconTint">@color/black_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/backgroundColor</item>

    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/backgroundColor</item>
    </style>

    <style name="MandiCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>
</resources>